@if (!Isloading){


    <div class="podcast-card paper-box" onclick="window.location.href='/podcast/@Podcast.Id';">
    <div class="cover">
        <img class="img" src="@Podcast.Image" >
    </div>
    <div class="content">
        <div class="date">
            <i class="material-icons-two-tone">calendar_today</i>
            @Podcast.DateTime.ToShortDateString()
        </div>
        <div class="title">
            @Podcast.Title
        </div>
    </div>
</div>
}
else{

    <div class="podcast-card disable paper-box" >
        <div class="cover">
            <MudSkeleton Class="img" SkeletonType="SkeletonType.Rectangle" Height="150px"/>
        </div>
        <div class="content">
            <div class="date">
                <MudSkeleton Width="30%" />
            </div>
            <div class="title">
                <MudSkeleton Width="80%" />
                <MudSkeleton Width="100%" />
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public PodcastItem Podcast { get; set; }
    [Parameter]
    public bool Isloading { get; set; }
}
