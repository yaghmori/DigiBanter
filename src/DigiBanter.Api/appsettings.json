{
  "AllowedHosts": "*",
  "ApplyMigrations": false,
  "DefaultMigrationPassword": "",
  "AssetsPath": "",
  "BaseStoragePath": "",
  "DataStoragePath": "",
  "Endpoints": {
    "Api": "",
    "Portal": ""
  },

  "DataProtectionKey": {
    "Key": "Api-DataProtectionKey",
    "Certificate": null,
    "ApplicationName": null
  },

  "DatabaseOptions": {
    "ConnectionString": "${DatabaseOptions__ConnectionString}",
    "MaxRetryCount": 10,
    "CommandTimeout": 10,
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true,
    "EnableThreadSafetyChecks": true
  },
  "BasicCredentials": {
    "UserName": "",
    "Password": ""
  },
  "HangfireOptions": {
    "ConnectionString": "",
    "MaximumJobsFailed": 5,
    "UserId": "",
    "Password": ""
  },

  "RedisOptions": {
    "ConnectionString": "${REDIS_CONNECTION_STRING:redis:6379}",
    "InstanceName": "Test_"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Hangfire": "Warning"

      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "",
          "controlLevelSwitch": {
            "levelSwitch": "LoggingLevelSwitch"
          },
          "buffered": true,
          "batchPostingLimit": 100,
          "period": "00:00:30"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithHangfireContext",
      "WithExceptionDetails"
    ],
    "Properties": {
      "Application": "eallyfe.api"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "MasterJwtSettings": {
    "SecurityKey": "",
    "Issuer": "",
    "Audience": "",
    "TokenExpiryInMinutes": 5,
    "RefreshTokenExpiryInDay": 1,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "ValidateIssuer": true,
    "ValidateAudience": true
  },

  "TenantJwtSettings": {
    "SecurityKey": "",
    "Issuer": "",
    "Audience": "",
    "TokenExpiryInMinutes": 5,
    "RefreshTokenExpiryInDay": 1,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "ValidateIssuer": true,
    "ValidateAudience": true
  },

  "HealthCheckOptions": {
    "MaxMemoryUsage": 500000000,
    "MaxCpuUsage": 80,
    "DiskThresholdMB": 10000,
    "DiskDrivePath": "/"
  }

}
