

<MudNavMenu  Bordered="true" Rounded="true" Color="MudBlazor.Color.Primary" Class="pa-2">
    <MudNavLink  Href="@AppUri.Dashboard" Match="NavLinkMatch.All" Icon="fad fa-chart-tree-map">@_viewLocalizer[ViewResources.Dashboard]</MudNavLink>
    <MudNavLink Href="@AppUri.post" Icon="fad fa-check-to-slot">@_viewLocalizer[ViewResources.AddNewPost]</MudNavLink>



    <MudNavLink OnClick="Logout" Icon="fad fa-right-from-bracket">@_viewLocalizer[ViewResources.Logout]</MudNavLink>

</MudNavMenu>



@code {
    private void Logout()
    {
        _navigationManager.NavigateTo(AppUri.Logout, false);
    }

}