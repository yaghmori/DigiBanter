@if (!Isloading)
{

    <div class="col-md-8">
        <div class="media g-mb-30 media-comment">
            <img class="d-flex g-width-50 g-height-50 rounded-circle g-mt-3 g-mr-15" src="@Model.Image" alt="Image Description">
            <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
                <div class="g-mb-15">
                    <h5 class="h5 g-color-gray-dark-v1 mb-0">@Model.User</h5>
                    <span class="g-color-gray-dark-v4 g-font-size-12">5 days ago</span>
                </div>

                <p>
                    @Model.Content
                </p>

                <ul class="list-inline d-sm-flex my-0">
                    <li class="list-inline-item g-mr-20">
                        <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                            <i class="fa fa-thumbs-up g-pos-rel g-top-1 g-mr-3"></i>
                            @Model.Like
                        </a>
                    </li>
                    <li class="list-inline-item g-mr-20">
                        <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                            <i class="fa fa-thumbs-down g-pos-rel g-top-1 g-mr-3"></i>
                            @Model.Dislike
                        </a>
                    </li>
                    <li class="list-inline-item ml-auto">
                        <a class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover" href="#!">
                            <i class="fa fa-reply g-pos-rel g-top-1 g-mr-3"></i>
                            Reply
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

}
else
{

    <div class="post-card disable">
        <div class="cover">
            <MudSkeleton Style="border-radius:10px; width:100%;min-width:350px;" SkeletonType="SkeletonType.Rectangle" Width="350px" Height="230px" Animation="Animation.Wave" />
        </div>
        <div class="body">
            <div class="date">
                <MudSkeleton Width="100px" />
            </div>
            <div class="title">
                <MudSkeleton Width="70%" Height="30px" />
            </div>
            <div class="author">
                <MudSkeleton Width="120px" />
            </div>

            <div class="content">
                <MudSkeleton Width="100%" Height="12px" />
                <MudSkeleton Width="100%" Height="12px" />
                <MudSkeleton Width="100%" Height="12px" />
                <MudSkeleton Width="100%" Height="12px" />
                <MudSkeleton Width="100%" Height="12px" />
                <MudSkeleton Width="100%" Height="12px" />
            </div>
            <div class="action-bar">
                <MudSkeleton Width="150px" Height="55px" />

            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public BlogPostCommentResponse Model { get; set; }
    [Parameter]
    public bool Isloading { get; set; }
}
